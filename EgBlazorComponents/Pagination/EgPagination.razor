@using EgBlazorComponents
@inherits EgComponentBase

<nav>
	<ul class="pagination">
		@if (isPreviousButtonEnabled)
		{
			<li class="page-item disabled">
				<a class="page-link">&laquo;</a>
			</li>
		}
		else
		{
			<li class="page-item">
				<a class="page-link" href="#" @onclick="(() => OnPageButtonClickAsync(GetStartPage(--currentPaginationIndex)))" @onclick:preventDefault>&laquo;</a>
			</li>
		}

		@{ 
			for (var i = 0; i < numOfPages; i++)
			{
				var pageIndex = startPage + i;

				if (CurrentPage == pageIndex)
				{
					<li class="page-item active">
						<a class="page-link">@pageIndex</a>
					</li>
				}
				else
				{
					<li class="page-item">
						<a class="page-link" href="#" @onclick="(() => OnPageButtonClickAsync(pageIndex))" @onclick:preventDefault>@pageIndex</a>
					</li>
				}
			}
		}

		@if (isNextButtonEnabled)
		{
			<li class="page-item disabled">
				<a class="page-link">&raquo;</a>
			</li>
		}
		else
		{
			<li class="page-item">
				<a class="page-link" href="#" @onclick="(() => OnPageButtonClickAsync(GetStartPage(++currentPaginationIndex)))" @onclick:preventDefault>&raquo;</a>
			</li>
		}
	</ul>
</nav>